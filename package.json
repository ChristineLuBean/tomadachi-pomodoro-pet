{
  "name": "virtual-pet",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "prod": "vercel --prod",
    "dev": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd server && nodemon server.js",
    "start:frontend": "cd client && vite",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:fix": "eslint --fix .",
    "lint-and-format": "concurrently \"npm run lint:fix\" \"npm run format\""
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "vercel": "^28.18.3"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
